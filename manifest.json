{
    "manifest_version": 2,
    "name": "Truth Be Told",
    "version": "0.1",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content_scripts.js"]
    }],
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "activeTab","declarativeContent","storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}