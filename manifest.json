{
    "manifest_version": 2,
    "name": "Truth Be Told",
    "version": "0.1",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "/images/get_started16.png",
        "128": "icon.png"
    },
    "permissions": [
        "activeTab","contextMenus","declarativeContent","storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}